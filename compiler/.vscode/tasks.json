{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "-I${workspaceFolder}/compiler",
          "-I${workspaceFolder}/compiler/ast",
          "-I${workspaceFolder}/compiler/lexer",
          "-I${workspaceFolder}/compiler/parser",
          "${workspaceFolder}/compiler/main.cpp",
          "${workspaceFolder}/compiler/ast/ast.cpp",
          "${workspaceFolder}/compiler/lexer/lexer.cpp",
          "${workspaceFolder}/compiler/parser/parser.cpp",
          "-o",
          "${workspaceFolder}/compiler/${fileBasenameNoExtension}.exe"
        ],
        "group": "build",
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "Run",
        "type": "shell",
        "command": "${workspaceFolder}/compiler/${fileBasenameNoExtension}.exe",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++.exe 활성 파일 빌드",
        "command": "C:\\\\msys64\\\\mingw64\\\\bin\\\\g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "-I${workspaceFolder}/compiler",
          "-I${workspaceFolder}/compiler/ast",
          "-I${workspaceFolder}/compiler/lexer",
          "-I${workspaceFolder}/compiler/parser",
          "${workspaceFolder}/compiler/main.cpp",
          "${workspaceFolder}/compiler/ast/ast.cpp",
          "${workspaceFolder}/compiler/lexer/lexer.cpp",
          "${workspaceFolder}/compiler/parser/parser.cpp",
          "-o",
          "${workspaceFolder}/compiler/${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "디버거에서 생성된 작업입니다."
      }
    ]
  }